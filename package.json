{
  "name": "vibe-homepage",
  "packageManager": "yarn@4.9.2",
  "dependencies": {
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "@types/ws": "^8",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "nodemon": "^3.1.10",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "wait-on": "^9.0.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js --mode production",
    "build:dev": "concurrently -k \"webpack --config webpack.config.js --mode development --watch\" \"wait-on dist/server.js && nodemon --watch dist --ext js,html --exec \\\"node dist/server.js\\\"\"",
    "start": "node dist/server.js"
  }
}
